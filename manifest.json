{
  "manifest_version": 3,
  "name": "Video Downloader Pro",
  "version": "2.1",
  "description": "Reliable video downloader for multiple platforms with quality selection",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "<all_urls>"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": [],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["download-icon.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
  